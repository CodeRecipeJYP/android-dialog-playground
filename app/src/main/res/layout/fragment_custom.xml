<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    card_view:cardBackgroundColor="@android:color/white"
    card_view:cardCornerRadius="20dp"
    card_view:cardElevation="4dp"
    android:layout_margin="16dp"
    >
    <android.support.constraint.ConstraintLayout
        android:id="@+id/contentFrame"
        android:paddingRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <View
            android:id="@+id/baseline"
            android:layout_width="2dp"
            android:layout_height="8dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintBottom_toBottomOf="@+id/seekBar"
            app:layout_constraintHorizontal_bias="0.353"
            app:layout_constraintLeft_toLeftOf="@+id/seekBar"
            app:layout_constraintRight_toRightOf="@+id/seekBar"
            app:layout_constraintTop_toTopOf="@+id/seekBar"
            />

        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:max="15"
            android:progress="5"
            app:layout_constraintLeft_toLeftOf="@+id/contentFrame"
            app:layout_constraintRight_toLeftOf="@+id/tv_value"
            app:layout_constraintTop_toTopOf="@+id/contentFrame"
            app:layout_constraintBottom_toBottomOf="@+id/contentFrame"
            />

        <TextView
            android:id="@+id/tv_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="1.0X"
            app:layout_constraintRight_toRightOf="@+id/contentFrame"
            app:layout_constraintTop_toTopOf="@+id/seekBar"
            />

        <TextView
            android:id="@+id/tv_baseline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1.0"
            tools:text="1.0"
            app:layout_constraintLeft_toLeftOf="@+id/baseline"
            app:layout_constraintRight_toRightOf="@+id/baseline"
            app:layout_constraintTop_toBottomOf="@+id/seekBar"
            />
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>